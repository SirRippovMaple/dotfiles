[user]
    email = {{ .email }}
    name = {{ .name }}
    signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIDD2Yt/vbrkysqbbwdxg/O/GsJ5YMwPWYiMkCOGK/csB
[core]
{{- if eq .os "debian" }}
    pager = batcat -p
{{- else }}
    pager = bat -p
{{- end }}
    excludesFile = ~/.config/git/gitignore
[merge]
    tool = nvim
[mergetool "nvim"]
    cmd = nvim \"$MERGED\"
[color]
    ui = true
    pager = no
[push]
    default = simple
[fetch]
    prune = true
[alias]
    aa = add --all
    ap = add --patch
    bb = !better-git-branch.sh
    branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
    lprune = !~/.config/git/lprune.sh
    ci = commit -v
    co = checkout
    pf = push --force-with-lease
    pr = "!$HOME/.config/git/pr.sh"
    st = status
    sign = "!git rebase --exec 'git commit --amend --no-edit -n -S' -i origin/HEAD"
    refork = !~/.config/git/refork.sh
    update = "!$HOME/.config/git/update.sh"
    prepare = "!$HOME/.config/git/prepare.sh"
[commit]
    gpgsign = true
[gpg]
    format = ssh
{{- if eq .os "darwin" }}
[gpg "ssh"]
    program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
{{- end }}
[pull]
    ff = only
[init]
    defaultBranch = master
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[advice]
    skippedCherryPicks = false
