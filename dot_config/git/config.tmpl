[user]
    email = {{ .email }}
    name = {{ .name }}
{{- if eq .work "true" }}
    signingkey = A0D2143A1F988F3A
{{- else }}
    signingkey = 8042CE0E6B9CAB67
{{- end}}
[core]
    editor = nvim
{{- if eq .os "debian" }}
    pager = batcat -p
{{- else }}
    pager = bat -p
{{- end }}
    excludesFile = ~/.config/git/gitignore
[merge]
    tool = nvim
[mergetool "nvim"]
    cmd = nvim \"$MERGED\"
[color]
    ui = true
    pager = no
[push]
    default = simple
[fetch]
    prune = true
[alias]
    aa = add --all
    ap = add --patch
    bb = !better-git-branch.sh
    branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
    lprune = "!f() { \
          git fetch origin | git branch --v | grep '\\[gone\\]' | awk '{print $1}' | xargs git branch -D; \
        }; f"
    ci = commit -v
    co = checkout
    pf = push --force-with-lease
    st = status
    sign = "!git rebase --exec 'git commit --amend --no-edit -n -S' -i origin/HEAD"
    refork = "!f() { \
        main_branch=`git remote show upstream | sed -n '/HEAD branch/s/.*: //p'`; \
        git checkout $main_branch && git fetch upstream && git reset upstream/$main_branch --hard && git push -f; \
        }; f"
    update = "!f() { \
        main_branch=`git remote show upstream | sed -n '/HEAD branch/s/.*: //p'`; \
        git fetch upstream && git rebase upstream/$main_branch && git push -f; \
        }; f"
    prepare = "!f() { \
        main_branch=`git remote show upstream | sed -n '/HEAD branch/s/.*: //p'`; \
        git fetch upstream; \
        for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do \
            git branch -D $branch; \
        done; \
        git fetch upstream && git checkout -b $1 upstream/$main_branch && git push -u origin $1; \
        git lprune; \
        }; f"
[commit]
    gpgsign = true
[pull]
    ff = only
[init]
    defaultBranch = master
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[advice]
    skippedCherryPicks = false
